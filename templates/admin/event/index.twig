{% extends template %}

{% set title = "Event"|trans %}

{% block content %}

    {# HEADER #}
    <div class="row">
        <div class="col-lg-12">
            <h1>
                <i class="fa fa-calendar"></i>
                {% trans %} Event {% endtrans %}
                <small>
                    {% trans %} List, add, or edit events {% endtrans %}
                </small>
            </h1>
        </div>
    </div>

    {# BREADCRUMB #}
    <div class="row">
        <div class="col-lg-12">
            <ol class="breadcrumb">
                <li>
                    <a data-pjax href="{{ urlFor('admin.index') }}">
                        <i class="fa fa-dashboard"></i> 
                        {% trans %} Dashboard {% endtrans %}
                    </a>
                </li>
                <li class="active"><i class="fa fa-calendar"></i> 
                    {% trans %} Event {% endtrans %}
                </li>
            </ol>
        </div>
    </div>

    {# MAIN #}
    <div class="row">
        <div class="col-lg-12">
            <ul class="nav nav-tabs">
                <li>
                    <a data-pjax href="{{ urlFor('admin.event.create') }}">
                        <i class="fa fa-plus"></i>
                        {% trans %} Add New {% endtrans %}
                    </a>
                </li>
            </ul>

            <table id="tbl-event" class="table table-condensed">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Start</th>
                        <th>End</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
{% endblock %}

{% block script %}
    <script type="text/javascript">
        $tblEvent = $('#tbl-event').DataTable({
            serverSide: true,
            processing: false,
            ordering: true,
            lengthChange: true,
            ajax: '{{ urlFor('admin.event.datatables') }}',
            columns: [
                {data: 'title'},
                {data: 'start'},
                {data: 'end'},
                {data: 'control'}
            ]
        });
    </script>
{% endblock %}