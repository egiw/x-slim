{% extends template %}

{% set title %}
    {% trans %} Create Article {% endtrans %}
{% endset %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <h1>
                {% trans %} Add Article {% endtrans %}
                <small>
                    {% trans %} Publish or save as draft new article {% endtrans %}
                </small>
            </h1>
            <ol class="breadcrumb">
                <li>
                    <a data-pjax href="{{ urlFor('admin.index') }}">
                        <i class="fa fa-dashboard"></i> 
                        {% trans %} Dashboard {% endtrans %}
                    </a>
                </li>
                <li>
                    <a data-pjax href="{{ urlFor('admin.article.index') }}">
                        <i class="fa fa-file"></i> 
                        {% trans %} Article {% endtrans %}
                    </a>
                </li>
                <li class="active">
                    <i class="fa fa-pencil"></i> 
                    {% trans %} Add {% endtrans %}
                </li>
            </ol>
        </div>
    </div>

    <form data-pjax method="post" role="form" 
          class="form-horizontal" action="{{ urlFor('admin.article.create') }}">

        {#        LANGUAGE      #}
        <div class="form-group">
            <label for="select-language" class="control-label col-sm-2">
                {% trans %} Language {% endtrans %}
            </label>
            <div class="col-sm-3">
                {{
                    html.select(languages, input['language'] , {
                        name: 'language',
                        class: 'form-control',
                        id: 'select-language'
                    })
                }}
            </div>
        </div>

        {#            TITLE         #}
        <div class="form-group {% if error.title %} has-error {% endif %}">
            <label class="control-label col-sm-2" for="title">
                {% trans %} Title {% endtrans %}
            </label>
            <div class="col-sm-10">
                <input type="text" class="form-control" 
                       name="title" 
                       value="{{ input['title'] }}" 
                       placeholder="{% trans 'Enter Title' %}"/>
                {{ html.error(error.title) }}
            </div>
        </div>

        {#         CATEGORIES        #}
        <div class="form-group">
            <label for="select-categories" class="control-label col-sm-2">
                {% trans %} Categories {% endtrans %}
            </label>
            <div class="col-sm-10">
                <select name="categories[]" id="select-categories" class="form-control" multiple>
                    {% for category in categories %}
                        {% set label %}
                            {% for translation in category.translations %} 
                                {{ translation.name }} 
                                {% if not loop.last %} &middot; {% endif %} 
                            {% endfor %}
                        {% endset %}
                        <optgroup label="{{ label }}">
                            {% for subcategory in category.subcategories %}
                                <option value="{{ subcategory.id }}"> 
                                    {% for translation in subcategory.translations %}
                                        {{ translation.name }}
                                        {% if not loop.last %} &middot; {% endif %}
                                    {% endfor %}
                                </option>
                            {% endfor %}    
                        </optgroup>
                    {% endfor %}
                </select>
            </div>
        </div>

        {#           REGION           #}
        <div class="form-group">
            <label for="select-regions" class="control-label col-sm-2">
                {% trans %} Regions {% endtrans %}
            </label>
            <div class="col-sm-10">
                <select name="regions[]" id="select-regions" class="form-control" multiple>
                    {% for region in regions  %}
                        <optgroup label="{{ region.name }}">
                            {% for province in region.children %}
                                <option value="{{ province.id }}">{{ province.name }}</option>
                            {% endfor %}
                            {% for province in region.children %}
                            <optgroup label="{{ province.name }}">
                                {% for city in province.children %}
                                    <option value="{{ city.id }}">{{ city.name }}</option>
                                {% endfor %}
                            </optgroup>
                        {% endfor %}
                        </optgroup>
                    {% endfor %}
                </select>
            </div>
        </div>

        {#        LOCATION      #}
        <div class="form-group">
            <label for="select-location" class="control-label col-sm-2">
                {% trans %} Location {% endtrans %}
            </label>
            <div class="col-sm-10">
                <div class="checkbox">
                    <label for="check-location">
                        <input type="checkbox" id="check-location"/> 
                        {% trans %} Enable {% endtrans %}
                    </label>
                </div>
                <div class="well" id="map-location" style="height: 350px;"></div>
            </div>
        </div>

        {#        CONTENT       #}
        <div class="form-group {% if error.content %} has-error {% endif %}">
            <label class="control-label col-sm-2" for="content">
                {% trans %} Content {% endtrans %}
            </label>
            <div class="col-sm-10">
                <textarea id="textarea-content" 
                          name="content" 
                          class="form-control" 
                          cols="30" 
                          rows="10"
                          placeholder="Content">{{ input['content'] }}
                </textarea>
                {{ html.error(error.content) }}
            </div>
        </div>

        {#            STATUS        #}
        <div class="form-group {% if error.status %} has-error {% endif %}">
            <label for="select-status" class="control-label col-sm-2">Status</label>
            <div class="col-sm-2">
                <select name="status" id="select-status" class="form-control">
                    {% if not _user.contributor %} 
                        <option value="{{ constant('Article::STATUS_PUBLISH') }}"
                                {% if input['status'] == constant('Article::STATUS_PUBLISH') %}
                                    selected
                                {% endif %}>
                            {% trans %} Publish {% endtrans %}
                        </option>
                    {% endif %}>
                    <option value="{{ constant('Article::STATUS_PENDING') }}"
                            {% if input['status'] == constant('Article::STATUS_PENDING') %}
                                selected
                            {% endif %}>
                        {% trans %} Need Review {% endtrans %}
                    </option>
                    <option value="{{ constant('Article::STATUS_DRAFT') }}"
                            {% if input['status'] == constant('Article::STATUS_DRAFT') %}
                                selected
                            {% endif %}>
                        {% trans %} Draft {% endtrans %}
                    </option>
                </select>
                {{ html.error(error.status) }}
            </div>
        </div>

        {#                SUBMIT            #}
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <div class="btn-group">
                    <input type="submit" class="btn btn-primary" 
                           value="Submit" />
                    <a data-pjax href="{{ urlFor('admin.article.index') }}" 
                       class="btn btn-default">
                        {% trans %} Cancel {% endtrans %}
                    </a>
                </div>
            </div>
        </div>
    </form>
{% endblock %}

{% block script %}
    <script type="text/javascript">
        $(function() {
            $("#textarea-content").summernote({
                height: 350
            });
            $('#select-categories, #select-regions').chosen();


            google.maps.event.addDomListener(window, 'load', function() {
                var mapOptions = {
                    center: new google.maps.LatLng(-34.397, 150.644),
                    zoom: 8
                };
                var map = new google.maps.Map(document.getElementById("map-location"),
                        mapOptions);


                google.maps.event.addListener(map, 'click', function(e) {
                    console.log(e);
                });
            });

        });
    </script>
{% endblock %}