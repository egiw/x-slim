{% extends template %}

{% set title = "Settings"|trans %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <h1>{% trans %} Settings {% endtrans %}</h1>
            <ol class="breadcrumb">
                <li>
                    <a data-pjax href="{{ urlFor('admin.index') }}">
                        <i class="fa fa-dashboard"></i> {% trans %} Dashboard {% endtrans %}
                    </a>
                </li>
                <li class="active">
                    <i class="fa fa-cog"></i> {% trans %} Settings {% endtrans %}
                </li>
            </ol>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <form data-pjax 
                  class="form form-horizontal" 
                  action="{{ urlFor('account.settings') }}" 
                  method="post">
                <div class="form-group">
                    <label for="select-language" class="control-label col-sm-3">
                        {% trans %} Language {% endtrans %}
                    </label>
                    <div class="col-sm-4">
                        {{ 
                            html.select({
                                en: 'English'|trans,
                                id: 'Indonesian'|trans
                            }, user.settings.language|default('en'), {
                                class: 'form-control',
                                id: 'select-language',
                                name: 'language'
                            }) 
                        }}
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-3">
                        <button class="btn btn-primary" type="submit">
                            {% trans %} Save {% endtrans %}
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}