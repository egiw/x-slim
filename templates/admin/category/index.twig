{% extends template %}

{% set title = "Category"|trans %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <h1>
                {% trans %} Category {% endtrans %}
                <small>
                    {% trans %} List, add, or edit categories {% endtrans %}
                </small>
            </h1>
            <ol class="breadcrumb">
                <li>
                    <a data-pjax href="{{ urlFor('admin.index') }}">
                        <i class="fa fa-dashboard"></i> 
                        {% trans %} Dashboard {% endtrans %}
                    </a>
                </li>
                <li class="active"><i class="fa fa-tags"></i> 
                    {% trans %} Category {% endtrans %}
                </li>
            </ol>
            {% include 'flash.twig' %}
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <ul class="nav nav-tabs">
                <li class="pull-right">
                    <a data-pjax href="{{ urlFor('admin.category.create') }}" 
                       data-placement="left">
                        <i class="fa fa-plus"></i>
                        {% trans %} Add New {% endtrans %}
                    </a>
                </li>
            </ul>
            <div id="tree">
                <ul>
                    {% for category in categories %}
                        <li>
                            <a href="http://www.google.com">
                                {% for translation in category.translations %}
                                    (<b>{{translation.language|upper}}</b>)
                                    {{ translation.name }} &middot;
                                {% endfor %}
                            </a>
                            <ul>
                                {% for subcategory in category.subcategories %}
                                    <li>
                                        {% for translation in subcategory.translations %}
                                            (<b>{{translation.language|upper}}</b>)
                                            {{ translation.name }} &middot;
                                        {% endfor %}
                                    </li>
                                {% endfor %}
                            </ul>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}

{% block script %}
    <script type="text/javascript">
        $('#tree').jstree();
    </script>
{% endblock %}