{% extends template %}

{% set title = "Articles"|trans %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <h1>
                {% trans %} User {% endtrans %}
                <small>
                    {% trans %} List, add, or edit users {% endtrans %}
                </small>
            </h1>
            <ol class="breadcrumb">
                <li>
                    <a data-pjax href="{{ urlFor('admin.index') }}">
                        <i class="fa fa-dashboard"></i> 
                        {% trans %} Dashboard {% endtrans %}
                    </a>
                </li>
                <li class="active"><i class="fa fa-users"></i> 
                    {% trans %} User {% endtrans %}
                </li>
            </ol>
            {% include 'flash.twig' %}
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <a data-pjax href="{{ urlFor('admin.user.create') }}" class="btn btn-primary" 
               id="btn-add">
                <i class="fa fa-plus"></i>
                Add New
            </a>

            <table class="table" id="tbl-user">
                <colgroup>
                    <col width='20%'/>
                    <col width='30%'/>
                    <col width='40%'/>
                    <col width='10%'/>
                </colgroup>
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Fullname</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
{% endblock %}

{% block script %}
    <script type="text/javascript">
        $tblUser = $("#tbl-user").DataTable({
            dom: '<"row"<"#toolbar.col-xs-6"><"col-xs-6"f>>t<"row"<"col-xs-6"i><"col-xs-6"p>>r',
            serverSide: true,
            processing: false,
            ordering: false,
            ajax: '{{ urlFor('admin.user.datatables') }}',
            lengthChange: false,
            columns: [
                {data: 'username'},
                {data: 'email'},
                {data: 'fullname'},
                {data: 'control'}
            ]
        });
        $("#btn-add").appendTo($("#toolbar"));


        function _delete(url) {
            bootbox.confirm('<h4 class="text-danger"><i class="fa fa-warning"></i> {% trans %} Are you sure want to delete this user? {% endtrans %}</h4>', function(result) {
                if (result) {
                    $.ajax({
                        url: url,
                        type: 'post',
                        data: {_METHOD: "DELETE"},
                        success: function(result) {
                            if (result) {
                                $tblUser.ajax.reload();
                                loadCountInfo();
                            }
                        }
                    });
                }
            });
        }

    </script>
{% endblock %}