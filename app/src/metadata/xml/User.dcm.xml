<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    <entity name="User" table="user">
        <id name="id" type="string" column="id" length="36">
            <generator strategy="UUID"/>
        </id>
        <field name="username" type="string" length="60" nullable="false" column="username" unique="true"/>
        <field name="password" length="60" type="string" nullable="false" column="password" />
        <field name="fullname" length="100" type="string" nullable="true" column="fullname" />
        <field name="email" length="100" type="string" nullable="true" column="email" unique="true" />
        <field name="avatar" type="blob" column="avatar" nullable="true" />
        <field name="settings" type="json_array" column="settings" nullable="true"></field>
        <one-to-many target-entity="Articlei18n" mapped-by="author" field="articles">
            <cascade>
                <cascade-persist/>
            </cascade>
        </one-to-many>
    </entity>
</doctrine-mapping>